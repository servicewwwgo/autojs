{
  "manifest_version": 3,
  "name": "Web自动化爬虫",
  "version": "1.0.0",
  "description": "基于WXT+Vue的Chrome浏览器扩展爬虫系统",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Web爬虫控制台"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/**/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
